#!/usr/bin/env python

# stdlib imports
import argparse

# local imports
from product.web_product import WebProduct


def get_parser():
    description = '''Send a finite fault product for event pages.'''
    parser = argparse.ArgumentParser(description=description)
    parser.add_argument('directory', help='Directory where all finite fault '
            'files are contained.')
    parser.add_argument('-c', '--create-product',
            help='Create products if not already contained within the directory',
            action='store_true', default=False)
    return parser

def main(args):
    directory = args.directory
    if args.create_product:
        product = WebProduct.fromDirectory(directory)
        product.writeContents(directory)
    send_product(directory)

def send_product(directory):
    """
    Configure pdl and send product directory.
    """
    pass

if __name__ == '__main__':
    parser = get_parser()
    pargs, unknown = parser.parse_known_args()
    main(pargs)
